@using global::Cuddler.Helpers
@using global::Cuddler.Pages.Shared.Cuddler.CuddlerFormFields
@using global::Cuddler.Utils
@model DynamicFormTagHelper
@{
    var classBuilder = CssClassBuilder.CreateInstance();
    if (Model.Width != ETagWidth.None)
    {
        var width = $"eux-{Model.Width}";
        classBuilder.AddClass(width);
    }
}
<cuddler-form-fields fields="@Model.Fields"
                     is-view="@Model.IsView"
                     read-only="@Model.ReadOnly" />