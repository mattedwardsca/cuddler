@using global::Cuddler.Pages.Shared.Cuddler.FormLabel
@using Kendo.Mvc.UI
@model global::Cuddler.Forms.FormField
@{
    var tableTypes = new List<SelectListItem>
    {
        new("My Account", "MyAccount"),
        new("My Branch", "MyBranch")
    };
    var dictionary = Model.HtmlAttributes as Dictionary<string, object?> ?? new Dictionary<string, object?>();
    dictionary.Add("id", Model.WebId);
}
@if (!Model.HideLabel)
{
    <form-label for-property="@Model.WebId"
                required="@Model.Required"
                text="@Model.Label" />
}
@(Html.Kendo()
      .DropDownList()
      .Name(Model.Name)
      .Value(Model.Value)
      .BindTo(tableTypes)
      .OptionLabel("None")
      .HtmlAttributes(dictionary))
@if (Model.ReadOnly)
{
    <script>
        $(function() {
            const dropdownlist = $("#@(Model.WebId)").data("kendoDropDownList");
            dropdownlist.readonly();
        });
    </script>
}