@using CuddlerDev.Pages.Shared.Cuddler.CuddlerFormFieldsChildren
@using global::Cuddler.Pages.Shared.Cuddler.CuddlerFormFieldsChildren

@model CuddlerDev.Pages.Shared.Cuddler.CuddlerFormFields.CuddlerFormFieldsTagHelper
<div class="eux-CuddlerFormFields">
    @if (Model.Fields.Any())
    {
        <cuddler-form-fields-children auto-save="@Model.AutoSave"
                                      fields="@Model.Fields"
                                      is-template="@Model.IsTemplate"
                                      read-only="Model.ReadOnly"
                                      save-url="@Model.SaveUrl" />
    }
    else
    {
        @Model.Html
    }
</div>