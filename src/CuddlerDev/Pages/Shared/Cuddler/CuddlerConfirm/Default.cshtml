@using CuddlerDev.Pages.Shared.Cuddler.CData
@using CuddlerDev.Pages.Shared.Cuddler.Divider
@using CuddlerDev.Pages.Shared.Cuddler.PopupEditor
@using global::Cuddler.Pages.Shared.Cuddler.Divider
@using global::Cuddler.Pages.Shared.Cuddler.PopupEditor
@model CuddlerDev.Pages.Shared.Cuddler.CuddlerConfirm.CuddlerConfirmTagHelper
@{
    var value = Model.Html.ToString()?.Trim();
}
<popup-editor action-complete="@Model.ActionComplete" button-icon="@Model.ButtonIcon" button-text="@Model.ButtonText" button-type="@Model.ButtonType" submit-api-url="@Model.ApiUrl" submit-button-text="Confirm">
    <c-data>
        <div class="eux-popup-top-html">
            @Html.Raw(Model.Html)
        </div>
        @if (!string.IsNullOrEmpty(value))
        {
            <div>
                @Html.Raw(value)
            </div>

            <divider />
        }
    </c-data>
</popup-editor>